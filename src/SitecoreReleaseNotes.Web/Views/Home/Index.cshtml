
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0" />

    <title>Sitecore Release Notes Search</title>

    <!-- CSS  -->
    <!--Import Google Icon Font-->
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="/Content/css/materialize.min.css"  media="screen,projection"/>

    <style>
        [v-cloak] {
            display: none;
        }

        highlight {
            background-color: #FFFAAA;
        }

         .header {
             height: 300px;
         }

        .input, input[type=text] {
            border-bottom-color: rgba(255, 255, 255, 0.8);
        }

        .input-field input[type=text]:focus {
            border-bottom: 1px solid white;
            box-shadow: 0 1px 0 0 white;
        }

        .input-field .prefix.active {
            color: white;
        }

        .input-field .prefix {
            top: 5px;
        }

        .card .card-title {
            font-weight: 400;
        }

        .card .card-sub-title {

            margin-bottom: 15px;
        }

        .card .card-content p {
            margin: 10px 0;
        }

        .button-search {
            margin-top: 20px;
        }

        body {
            /*background-image: url('/Content/images/agsquare.png');*/
            background-image: url('/Content/images/kindajean.png');
            /*background-image: url('/Content/images/debut_light.png');*/
        }

    </style>
</head>
<body>

    <div id="app" v-cloak>

        <div class="row z-depth-2 valign-wrapper red darken-2 header">
            <div class="col s12">
                <div class="row">
                    <div class="col s12 center-align white-text">
                        <h1>Sitecore Release Notes Search</h1>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s8 m7 offset-m2 l5 offset-l3 white-text">
                        <i class="material-icons prefix">search</i>
                        <input type="text" v-model.trim="query" @@keyup.enter="search"/>
                    </div>
                    <div class="col s1">
                        <button class="waves-effect btn white grey-text text-darken-3 button-search" @@click="search">Search</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row" v-show="searching" v-cloak>
                <div class="col s12 center-align">
                    <div class="preloader-wrapper big active">
                        <div class="spinner-layer spinner-blue">
                            <div class="circle-clipper left">
                                <div class="circle"></div>
                            </div><div class="gap-patch">
                                <div class="circle"></div>
                            </div><div class="circle-clipper right">
                                <div class="circle"></div>
                            </div>
                        </div>

                        <div class="spinner-layer spinner-red">
                            <div class="circle-clipper left">
                                <div class="circle"></div>
                            </div><div class="gap-patch">
                                <div class="circle"></div>
                            </div><div class="circle-clipper right">
                                <div class="circle"></div>
                            </div>
                        </div>

                        <div class="spinner-layer spinner-yellow">
                            <div class="circle-clipper left">
                                <div class="circle"></div>
                            </div><div class="gap-patch">
                                <div class="circle"></div>
                            </div><div class="circle-clipper right">
                                <div class="circle"></div>
                            </div>
                        </div>

                        <div class="spinner-layer spinner-green">
                            <div class="circle-clipper left">
                                <div class="circle"></div>
                            </div><div class="gap-patch">
                                <div class="circle"></div>
                            </div><div class="circle-clipper right">
                                <div class="circle"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row" v-show="!searching">
                <div class="col s12">
                    <div class="card hoverable" v-for="item in results">
                        <div class="card-content">
                            <span class="card-title">{{ item.title }}</span>
                            <span class="card-sub-title grey-text">{{ item.sortableVersion }}</span>
                            <p v-for="content in item.content" v-html="content"></p>
                            <p><b>Issue numbers:</b> {{ item.issueNumbers.join(", ") }}</p>
                        </div>
                        <div class="card-action right-align">
                            <a class="waves-effect waves-light btn-flat blue-grey-text" :href="'https://dev.sitecore.net' + item.releaseUrl">Release Page</a>
                            <a class="waves-effect waves-light btn blue" :href="item.releaseNotesUrl">Release Notes</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!--  Scripts-->
    <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="/Content/js/materialize/dist/materialize.min.js"></script>

    <script src="https://unpkg.com/vue"></script>
    <script src="https://unpkg.com/vue-material"></script>
    <script src="https://unpkg.com/vue-resource@1.2.1/dist/vue-resource.min.js"></script>

    <script>
        var vm = new Vue({
            el: "#app",
            data: {
                searching: false,
                query: "",
                results: []
            },
            methods: {
                search() {
                    this.searching = true;
                    this.$http.get("/api/search?query=" + this.query).then(response => {
                        vm.searching = false;
                        response.json().then(json => {
                            vm.results = json;
                        });
                    });
                }
            }
        });
    </script>
</body>
</html>
