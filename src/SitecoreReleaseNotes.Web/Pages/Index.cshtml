@page
@using SitecoreReleaseNotes.Web.Pages
@model IndexModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0" />

    <title>Sitecore Release Notes Search</title>

    <!-- CSS  -->
    <!--Import Google Icon Font-->
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="/css/materialize.min.css" media="screen,projection" />

    <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Open%20Sans">


    <style>
        [v-cloak] {
            display: none;
        }

        highlight {
            background-color: #FFFAAA;
            display: inline-block;
            padding: 2px;
        }

        .header {
            height: 300px;
            background-color: #83222b;
            /*background-image: url("/images/backgrounds/abstract-orange-texture.jpg");*/
            /*background-image: url("/images/backgrounds/abstract-orange-texture-3.jpg");*/
            /*background-image: url("/images/backgrounds/knot.jpg");*/
            /*background-image: url("/images/backgrounds/red-things.jpg");*/
            /*background-image: url("/images/backgrounds/spray.jpg");*/
            /*background-image: url("/images/backgrounds/grey-pattern.jpg");*/
            /*background-image: url("/images/backgrounds/minimalist-black.jpg");*/
            background-image: url("/images/backgrounds/abstract-orange-texture-2.jpg");
            background-size: cover;
        }

            .header h1 {
                text-shadow: #1d1d1d 0px 0px 15px;
            }

        .input, input[type=text] {
            border-bottom-color: rgba(255, 255, 255, 0.8);
        }

        .input-field input[type=text]:focus {
            border-bottom: 1px solid white;
            box-shadow: 0 1px 0 0 white;
        }

        .input-field .prefix.active {
            color: white;
        }

        .input-field .prefix {
            top: 5px;
        }

        .card .card-content .card-title {
            font-weight: 400;
            margin-bottom: 0;
        }

        .card .card-sub-title {
            margin-bottom: 15px;
        }

        .card .card-content p {
            margin: 10px 0;
        }

        .button-search {
            margin-top: 20px;
        }

        body {
            font-family: "Roboto", sans-serif;
            /*background-image: url('/images/agsquare.png');*/
            /*background-image: url('/images/kindajean.png');*/
            background-image: url('/images/debut_light.png');
        }

        h1 {
            font-family: "Open Sans", sans-serif;
        }

        .issue-numbers {
            line-height: 36px;
        }

        .issue-numbers .material-icons {
            font-size: 1.5rem;
            vertical-align: sub;
        }
    </style>

</head>
<body>

    <div id="app" v-cloak>

        <div class="row z-depth-2 valign-wrapper header">
            <div class="col s12">
                <div class="row">
                    <div class="col s12 center-align white-text">
                        <h1>Sitecore Release Notes</h1>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s8 m7 offset-m2 l5 offset-l3 white-text">
                        <i class="material-icons prefix">search</i>
                        <input type="text" v-model.trim="query" @@keyup.enter="search" placeholder="Search for issue numbers etc." />
                    </div>
                    <div class="col s1">
                        <button class="waves-effect btn white grey-text text-darken-3 button-search" @@click="search" :disabled="searching">Search</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row" v-show="searching" v-cloak>
                <div class="progress">
                    <div class="indeterminate"></div>
                </div>
            </div>

            <div class="row" v-show="!searching">
                <div class="col s12">
                    <div class="card" v-for="item in results">
                        <div class="card-content">
                            <span class="card-title">
                                <a class="black-text" :href="'https://dev.sitecore.net' + item.releaseUrl">
                                    {{ item.title }}
                                </a>
                            </span>
                            <span class="card-sub-title grey-text">
                                {{ item.sortableVersion }}
                            </span>
                            <p v-for="content in item.content" v-html="content"></p>
                        </div>
                        <div class="card-action right-align">
                            <div class="right-align">
                                <span class="left issue-numbers">
                                    <i class="material-icons teal-text">check</i>
                                    {{item.issueNumbers.length}} issue numbers resolved
                                </span>
                                <a class="waves-effect waves-light btn-flat blue-grey-text" :href="'https://dev.sitecore.net' + item.releaseUrl">
                                    Release Page
                                </a>
                                <a class="waves-effect waves-light btn" :href="item.releaseNotesUrl">
                                    Release Notes
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!--  Scripts-->
    <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="/js/materialize/dist/materialize.min.js"></script>

    <script src="https://unpkg.com/vue"></script>
    <script src="https://unpkg.com/vue-material"></script>
    <script src="https://unpkg.com/vue-resource@1.2.1/dist/vue-resource.min.js"></script>

    <script>
        var vm = new Vue({
            el: "#app",
            data: {
                searching: false,
                query: "",
                results: []
            },
            methods: {
                search() {
                    if (!this.query)
                        return;

                    this.searching = true;
                    this.$http.get("/api/search?query=" + this.query).then(response => {
                        vm.searching = false;
                        response.json().then(json => {
                            vm.results = json;
                        });
                    });
                }
            }
        });
    </script>
</body>
</html>
